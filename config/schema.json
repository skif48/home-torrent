{
  "title": "Home Torrent Config Schema",
  "type": "object",
  "properties": {
    "http_port": {
      "type": "integer"
    },
    "logging": {
      "type": "object",
      "properties": {
        "log_level": {
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "console": {
            "type": "boolean"
          },
          "directory": {
            "type": "string"
          },
          "file_name": {
            "type": "string"
          },
          "max_size": {
            "type": "integer"
          },
          "max_backups": {
            "type": "integer"
          },
          "max_age": {
            "type": "integer"
          }
        }
      }
    }
  }
}
